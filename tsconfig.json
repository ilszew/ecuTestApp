{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["ES2017", "ES2018", "ES2019", "ES2020"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["react-native", "jest"],
    "baseUrl": ".",
    "paths": {
      "euc-ble-connector": ["../euc-ble-connector/src/index.ts"],
      "euc-ble-connector/*": ["../euc-ble-connector/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}

